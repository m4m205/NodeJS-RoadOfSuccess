<%- include('../includes/admin/header',{page_title: 'User Managment'}); %>
  <div class="col-sm-9">
      <h3 class="title">Bundle List

        <a href="/admin/bundel" class="btn btn-primary btn-sm pull-right">New Bundel</a>

      </h3>
            <div class="row">
              <div class="col-md-12">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Name</th>
                      <th>Publish at</th>
                      <th>Language</th>
                      <th class="text-right"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <%  let row= 0; result.forEach( (item, index) => { %>
                    <tr>
                      <th scope="row"><%=  ++row %></th>
                      <td><%= item.name %></td>
                      <td><%= item.publish_date %></td>
                      <td><%= item.language %></td>
                      <td class="text-right">
                        <a class="options" href="/admin/bundel/<%= item._id %>">
                          <i class="glyphicon glyphicon-pencil text-warning"></i></a>
                        <a class="options" href="/admin/bundel/delete/<%= item._id %>">
                          <i class="glyphicon glyphicon-trash text-danger"></i>
                        </a>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
      </div>
<%- include('../includes/admin/footer'); %>
